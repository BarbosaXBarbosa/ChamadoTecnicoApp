@model IEnumerable<ChamadoTecnicoAppData.Dto.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Usuários</h1>
<hr />
<div class="d-flex justify-content-between">
    <p>
        <a asp-action="Inclui" class="btn btn-primary">Incluir</a>
    </p>
    <form asp-action="Index" class="form-inline">
        <div class="form-group mb-2">
            <label>Busca</label>
        </div>
        <div class="form-group mb-2 mx-sm-3">
            <input type="search" class="form-control" name="pesquisa" id="pesquisa" />
        </div>
        <div class="form-group mb-2">            
            <input type="submit" value="Buscar" class="btn btn-primary" />
        </div>
    </form>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.CodigoUsuario)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Perfil)
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Perfil)
            </td>
            <td>
                <a asp-action="Altera" asp-route-id="@item.CodigoUsuario" class="btn btn-primary">
                    <i class="fa-solid fa-pencil"></i>
                </a>
                <a asp-action="Exibe" asp-route-id="@item.CodigoUsuario" class="btn btn-primary">
                    <i class="fa-solid fa-eye"></i>
                </a>
                <a asp-action="Exclui" asp-route-id="@item.CodigoUsuario" class="btn btn-danger">
                    <i class="fa-solid fa-trash-can"></i>
                </a>                
            </td>
        </tr>
}
    </tbody>
</table>
