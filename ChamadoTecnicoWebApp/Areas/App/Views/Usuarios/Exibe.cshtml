@model ChamadoTecnicoWebApp.Models.UsuarioViewModel

<div class="row">
    <div class="offset-4 col-md-4 offset-'4">   
        <h4>Usuário</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.CodigoUsuario)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CodigoUsuario)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>           
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Perfil)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Perfil)
            </dd>
        </dl>
        <hr/>
        <div class="text-center">
            <a asp-action="Altera" asp-route-id="@Model.CodigoUsuario" class="btn btn-primary">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </div>    
</div>

